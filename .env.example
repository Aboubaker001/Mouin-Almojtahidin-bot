# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
BOT_TOKEN=your_actual_bot_token_from_botfather

# Admin Configuration
# Add admin user IDs separated by commas (get your user ID from @userinfobot)
ADMIN_USER_IDS=123456789,987654321

# Group ID for announcements (optional)
# Get group ID by adding @userinfobot to your group
GROUP_ID=-100123456789

# Support channel username (optional)
SUPPORT_CHANNEL=@YourSupportChannel

# Admin chat ID for notifications (optional)
# Usually same as GROUP_ID or your personal chat ID
ADMIN_CHAT_ID=-100123456789

# User Verification
# Secret code for user activation (change this!)
ACTIVATION_CODE=YOUR_SECRET_CODE_HERE

# Zoom Configuration (optional)
# Default Zoom link for lessons
ZOOM_LINK=https://zoom.us/j/your_meeting_id?pwd=your_password

# Rate Limiting Configuration (optional)
# Set to false to disable rate limiting
RATE_LIMITING_ENABLED=true

# Maximum requests per minute per user
MAX_REQUESTS_PER_MINUTE=30

# Maximum requests per hour per user
MAX_REQUESTS_PER_HOUR=100